<section class="section speakers bg-timer overlay-lighter">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Section Title -->
                <div class="section-title white">
                    <h3>Liste des  <span class="alternate">Produits</span></h3>

