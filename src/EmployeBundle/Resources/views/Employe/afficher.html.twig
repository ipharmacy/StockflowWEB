
<h1>
    La Liste des Employes :
</h1>


{% for employe in employes %}
    <div>
        <img src="{{ asset('images/')}}{{ employe.photo }}" class="img-responsive">
        {{ employe.nom }}
{{ employe.prenom }}
{{ employe.mail }}
{{ employe.cin }}
{{ employe.dateNaissance |date('d-m-Y') }}
{{ employe.poste }}
{{ employe.numTel }}
{{ employe.salaire }}
{{ employe.dateRecrutement |date('d-m-Y H:i:s')  }}
    </div>
{% endfor %}

<div class="sidebar sidebar-widget">
    <h3 class="title">Recherche</h3>


    <form action="{{ path('employe_rechercher') }}" method="POST" >
        <div class="form-group">
            <input class="form-control search-fields" placeholder="" type="text" id="nom" name="nom">
        </div>
        <div class="form-group">
            <input class="form-control search-fields" placeholder="" type="text" id="prenom" name="prenom">
        </div>
        <div class="form-group">
            <input class="form-control search-fields" placeholder="" type="text" id="poste" name="poste">
        </div>

        <div class="form-group">
            <button class="search-button" type="submit">Rechercher</button>
        </div>


    </form>
</div>
